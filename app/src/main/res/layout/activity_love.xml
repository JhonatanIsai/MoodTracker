<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoveActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/love_peaceful_menu2"
            android:layout_width="match_parent"
            android:layout_height="145dp"

            app:cardBackgroundColor="#FFD600" >

            <TextView
                android:id="@+id/love_peaceful_textView_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Peaceful"
                android:textSize="42dp"
                android:textStyle="bold"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/love_tender_menu2"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            app:cardBackgroundColor="#FFE600">

            <TextView
                android:id="@+id/love_tenderness_textView_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tenderness"
                android:textSize="42dp"
                android:textStyle="bold"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/love_desire_menu2"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            app:cardBackgroundColor="#FFF500"


            >

            <TextView
                android:id="@+id/love_desire_textView_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Desire"
                android:textSize="42dp"
                android:textStyle="bold"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/love_longing_menu2"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            app:cardBackgroundColor="#FAFF00" >

            <TextView
                android:id="@+id/love_longing_textView_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Longing"
                android:textSize="42dp"
                android:textStyle="bold"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/love_affectionate_menu2"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            app:cardBackgroundColor="#EBFF00" >

            <TextView
                android:id="@+id/love_affectionate_textView_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Affectionate"
                android:textSize="42dp"
                android:textStyle="bold"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>