        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoodTracker">
        <activity
            android:name=".HistoricalDataActivity"
            android:exported="false" />
        <activity
            android:name=".HistoricalDataBarGraphActivity"
            android:exported="false" />
        <activity
            android:name=".HistoricalDataPieChartActivity"
            android:exported="false" />
        <activity
            android:name=".ui.VideoView"
            android:exported="false" />
        <activity
            android:name=".ui.wellness_toolbox"
            android:exported="false" />
        <activity
            android:name=".ui.fear"
            android:exported="false" />
        <activity
            android:name=".ui.AngerActivity"
            android:exported="false" />
