<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.moodtracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoodTracker">
        <activity
            android:name=".Activity_love_peaceful"
            android:exported="false" />
        <activity
            android:name=".SurpriseActivity"
            android:exported="false" />
        <activity
            android:name=".JoyActivity"
            android:exported="false" />
        <activity
            android:name=".LoveActivity"
            android:exported="false" />
        <activity
            android:name=".MoodSquaresActivity"
            android:exported="false" />
        <activity
            android:name=".DataVisualisation"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_data_visualisation"
            android:theme="@style/Theme.MoodTracker.Fullscreen" />
        <activity
            android:name=".SideMenuActivity"
            android:exported="false"
            android:label="@string/title_activity_side_menu"
            android:theme="@style/Theme.MoodTracker.NoActionBar" />
        <activity
            android:name=".RegisterUser"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>